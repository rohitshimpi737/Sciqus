{
  "info": {
    "name": "Sciqus Backend API",
    "description": "Postman collection for Sciqus LMS backend (Spring Boot, JWT, MySQL)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/health",
          "host": ["{{base_url}}"],
          "path": ["api", "health"]
        }
      }
    },
    {
      "name": "Register (Student)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"student1\",\n  \"email\": \"student1@example.com\",\n  \"password\": \"password123\",\n  \"firstName\": \"Student\",\n  \"lastName\": \"One\",\n  \"phoneNumber\": \"+1234567890\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/register",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "register"]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"usernameOrEmail\": \"admin\",\n  \"password\": \"admin123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/login",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "Get Current User",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{jwt_token}}" }],
        "url": {
          "raw": "{{base_url}}/api/auth/me",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "me"]
        }
      }
    },
    {
      "name": "Logout",
      "request": {
        "method": "POST",
        "header": [{ "key": "Authorization", "value": "Bearer {{jwt_token}}" }],
        "url": {
          "raw": "{{base_url}}/api/auth/logout",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "logout"]
        }
      }
    },
    {
      "name": "Get All Users (Admin)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{jwt_token}}" }],
        "url": {
          "raw": "{{base_url}}/api/users",
          "host": ["{{base_url}}"],
          "path": ["api", "users"]
        }
      }
    },
    {
      "name": "Create User (Admin)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwt_token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"student2\",\n  \"email\": \"student2@example.com\",\n  \"role\": \"STUDENT\",\n  \"courseId\": 1,\n  \"generateTempPassword\": true\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/users",
          "host": ["{{base_url}}"],
          "path": ["api", "users"]
        }
      }
    },
    {
      "name": "Update User",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwt_token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"Updated\",\n  \"lastName\": \"Name\",\n  \"phoneNumber\": \"+9876543210\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/users/1",
          "host": ["{{base_url}}"],
          "path": ["api", "users", "1"]
        }
      }
    },
    {
      "name": "Activate User",
      "request": {
        "method": "PATCH",
        "header": [{ "key": "Authorization", "value": "Bearer {{jwt_token}}" }],
        "url": {
          "raw": "{{base_url}}/api/users/1/activate",
          "host": ["{{base_url}}"],
          "path": ["api", "users", "1", "activate"]
        }
      }
    },
    {
      "name": "Deactivate User",
      "request": {
        "method": "PATCH",
        "header": [{ "key": "Authorization", "value": "Bearer {{jwt_token}}" }],
        "url": {
          "raw": "{{base_url}}/api/users/1/deactivate",
          "host": ["{{base_url}}"],
          "path": ["api", "users", "1", "deactivate"]
        }
      }
    },
    {
      "name": "Delete User",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{jwt_token}}" }],
        "url": {
          "raw": "{{base_url}}/api/users/1",
          "host": ["{{base_url}}"],
          "path": ["api", "users", "1"]
        }
      }
    },
    {
      "name": "Get All Courses",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/courses",
          "host": ["{{base_url}}"],
          "path": ["api", "courses"]
        }
      }
    },
    {
      "name": "Search Courses",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/courses/search?keyword=java",
          "host": ["{{base_url}}"],
          "path": ["api", "courses", "search"],
          "query": [{ "key": "keyword", "value": "java" }]
        }
      }
    },
    {
      "name": "Create Course (Admin)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwt_token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"courseName\": \"React Development\",\n  \"courseCode\": \"REACT-001\",\n  \"courseDuration\": 4,\n  \"description\": \"Modern React development course\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/courses",
          "host": ["{{base_url}}"],
          "path": ["api", "courses"]
        }
      }
    },
    {
      "name": "Update Course (Admin)",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwt_token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"courseName\": \"Updated Course\",\n  \"courseCode\": \"REACT-001\",\n  \"courseDuration\": 5,\n  \"description\": \"Updated description\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/courses/1",
          "host": ["{{base_url}}"],
          "path": ["api", "courses", "1"]
        }
      }
    },
    {
      "name": "Delete Course (Admin)",
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{jwt_token}}" }],
        "url": {
          "raw": "{{base_url}}/api/courses/1",
          "host": ["{{base_url}}"],
          "path": ["api", "courses", "1"]
        }
      }
    },
    {
      "name": "Get Student Profile",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{jwt_token}}" }],
        "url": {
          "raw": "{{base_url}}/api/student/profile",
          "host": ["{{base_url}}"],
          "path": ["api", "student", "profile"]
        }
      }
    },
    {
      "name": "Get Student's Course",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{jwt_token}}" }],
        "url": {
          "raw": "{{base_url}}/api/student/course",
          "host": ["{{base_url}}"],
          "path": ["api", "student", "course"]
        }
      }
    },
    {
      "name": "Self Enroll in Course",
      "request": {
        "method": "POST",
        "header": [{ "key": "Authorization", "value": "Bearer {{jwt_token}}" }],
        "url": {
          "raw": "{{base_url}}/api/student/enroll/1",
          "host": ["{{base_url}}"],
          "path": ["api", "student", "enroll", "1"]
        }
      }
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:8080" },
    { "key": "jwt_token", "value": "" }
